<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="./vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
>
    <testsuites>
        <testsuite name="Aspire">
            <directory suffix="Test.php">./app/*/Tests</directory>
            <exclude>./app/*/Tests/External</exclude>
        </testsuite>
        <testsuite name="Quick">
            <directory suffix="Test.php">./app/*/Tests/Quick</directory>
        </testsuite>
        <testsuite name="Unit">
            <directory suffix="Test.php">./app/*/Tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory suffix="Test.php">./app/*/Tests/Feature</directory>
        </testsuite>
        <testsuite name="Integration">
            <directory suffix="Test.php">./app/*/Tests/Integration</directory>
        </testsuite>
        <testsuite name="External">
            <directory suffix="Test.php">./app/*/Tests/External</directory>
        </testsuite>
        <testsuite name="Services">
            <directory suffix="Test.php">./app/*/Tests/Unit/Services</directory>
        </testsuite>
        <testsuite name="Http">
            <directory suffix="Test.php">./app/*/Tests/Feature/Http</directory>
        </testsuite>
        <testsuite name="V1">
            <directory suffix="Test.php">./app/*/Tests/Feature/Http/V1</directory>
        </testsuite>
        <testsuite name="Dashboard">
            <directory suffix="Test.php">./app/*/Tests/Feature/Http/Dashboard</directory>
        </testsuite>
        <testsuite name="Risk">
            <directory suffix="Test.php">./app/*/Tests/Feature/Http/Risk</directory>
        </testsuite>
        <testsuite name="Invest">
            <directory suffix="Test.php">./app/*/Tests/Feature/Http/Invest</directory>
        </testsuite>
        <testsuite name="Finance">
            <directory suffix="Test.php">./app/Finance/Tests</directory>
        </testsuite>
    </testsuites>
    <groups>
        <exclude>
            <group>External</group>
            <group>Todo</group>
        </exclude>
    </groups>
    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">./app</directory>
        </include>
        <exclude>
            <directory suffix=".php">./app/*/Database</directory>
            <directory suffix=".php">./app/*/Events</directory>
            <directory suffix=".php">./app/*/Exceptions</directory>
            <directory suffix=".php">./app/*/Http/Requests</directory>
            <directory suffix=".php">./app/*/Http/Resources</directory>
            <directory suffix=".php">./app/*/Notifications</directory>
            <directory suffix=".php">./app/*/Providers</directory>
            <directory suffix=".php">./app/*/Routes</directory>
            <directory suffix=".php">./app/*/Tests</directory>
        </exclude>
    </coverage>

    <php>
        <server name="APP_ENV" value="testing"/>
        <server name="BCRYPT_ROUNDS" value="4"/>
        <server name="CACHE_DRIVER" value="array"/>
        <!-- <server name="DB_CONNECTION" value="sqlite"/> -->
        <!-- <server name="DB_DATABASE" value=":memory:"/> -->
        <server name="MAIL_MAILER" value="array"/>
        <server name="QUEUE_CONNECTION" value="sync"/>
        <server name="SESSION_DRIVER" value="array"/>
        <server name="TELESCOPE_ENABLED" value="false"/>
    </php>
</phpunit>
